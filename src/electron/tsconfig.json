{
  "compilerOptions": {
    // requires strict types
    "strict": true,
    // tell ts to generate ESM syntax
    "target": "ESNext",
    // tell ts to require ESM Syntax as input (including .js file imports)
    "module": "NodeNext",
    // define where to put generated JS
    "outDir": "../../dist/electron",
    // ignore error from deps
    "skipLibCheck": true
  }
}
