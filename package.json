{
  "name": "pixelshot",
  "productName": "Pixelshot",
  "version": "0.2.0",
  "description": "Screenshots for desktop",
  "main": "dist/electron/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:ui dev:electron",
    "dev:ui": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=prod electron dist/electron",
    "build": "tsc -b && vite build",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
    "build:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
    "build:windows": "npm run transpile:electron && npm run build && electron-builder --win --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hetav21/Pixelshot.git"
  },
  "keywords": [
    "Screenshots",
    "Desktop"
  ],
  "author": {
    "name": "Hetav Shah",
    "email": "shahhetav2106@gmail.com",
    "url": "https://github.com/Hetav21/"
  },
  "bugs": {
    "url": "https://github.com/Hetav21/Pixelshot/issues"
  },
  "homepage": "https://github.com/Hetav21/Pixelshot/blob/master/README.md",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/screenshot-desktop": "^1.12.3",
    "@types/yargs": "^17.0.33",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "34.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.20.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.3.1"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "electron-log": "^5.3.0",
    "electron-window-state": "^5.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "screenshot-desktop": "^1.15.1",
    "tailwindcss": "^4.1.4",
    "yargs": "^17.7.2"
  }
}
